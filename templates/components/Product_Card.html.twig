{# templates/components/product_card.html.twig #}

<div class="product-card" data-controller="product-card">
    <img src="{{ product.picture }}" alt="{{ product.title }}" class="product-image">
    <div class="product-info">
        <h3>{{ product.title }}</h3>
        <p>Author: {{ product.author }}</p>
        <p>Year: {{ product.year }}</p>
    </div>
    <div class="product-actions">
        <button data-action="product-card#want">Want</button>
        <a href="{{ product.buyLink }}" class="button">Buy</a>
        <button data-action="product-card#toggleInfo">See More Info</button>
    </div>
    <div class="product-more-info" data-product-card-target="info">
        <!-- Additional information can be added here -->
        <p>Description: {{ product.description }}</p>
        <p>Price: {{ product.price }}</p>
        <p>Other details...</p>
    </div>
</div>
